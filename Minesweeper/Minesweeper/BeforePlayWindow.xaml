        <Label Content="Эксперт (31x31)" HorizontalAlignment="Left" Height="26" Margin="49,152,0,0" VerticalAlignment="Top" Width="104"/>
        <Label Content="Пользовательская" HorizontalAlignment="Left" Height="26" Margin="49,182,0,0" VerticalAlignment="Top" Width="114"/>
        <TextBox x:Name="tb1" HorizontalAlignment="Left" Height="27" Margin="22,208,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="99" Visibility="Hidden"/>
        <Button Content="Вернуться&#xA;  в меню" HorizontalAlignment="Center" Height="50" Margin="0,320,0,0" VerticalAlignment="Top" Width="76" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="Button_Click"/>
        <Button Content="Играть" HorizontalAlignment="Center" Height="50" Margin="0,245,0,0" VerticalAlignment="Top" Width="76" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="Button_Click_1"/>
        <TextBox x:Name="tb2" HorizontalAlignment="Left" Height="27" Margin="129,208,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="99" Visibility="Hidden"/>
        <Label Content="x10" HorizontalAlignment="Left" Height="26" Margin="192,92,0,0" VerticalAlignment="Top" Width="36" FontWeight="Bold"/>
        <Label Content="" HorizontalAlignment="Left" Height="26" Margin="164,92,0,0" VerticalAlignment="Top" Width="28">
            <Label.Background>
                <ImageBrush ImageSource="/white.png"/>
            </Label.Background>
        </Label>
        <Label Content="x50" HorizontalAlignment="Left" Height="26" Margin="192,122,0,0" VerticalAlignment="Top" Width="38" FontWeight="Bold"/>
        <Label Content="" HorizontalAlignment="Left" Height="26" Margin="164,122,0,0" VerticalAlignment="Top" Width="28">
            <Label.Background>
                <ImageBrush ImageSource="/white.png"/>
            </Label.Background>
        </Label>
        <Label Content="x220" HorizontalAlignment="Left" Height="26" Margin="192,152,0,0" VerticalAlignment="Top" Width="38" FontWeight="Bold"/>
        <Label Content="" HorizontalAlignment="Left" Height="26" Margin="164,152,0,0" VerticalAlignment="Top" Width="28">
            <Label.Background>
                <ImageBrush ImageSource="/white.png"/>
            </Label.Background>
        </Label>
    </Grid>
