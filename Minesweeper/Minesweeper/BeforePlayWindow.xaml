        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="BeforePlayWindow" Height="420" Width="250" Closing="BeforePlayWindow_Closing" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Выберите сложность" HorizontalAlignment="Center" Height="36" Margin="0,10,0,0" VerticalAlignment="Top" Width="210" FontWeight="Bold" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
