        <RadioButton x:Name="rb2" Content="" HorizontalAlignment="Left" Height="15" Margin="29,130,0,0" VerticalAlignment="Top" Width="15" Checked="rb2_Checked"/>
        <RadioButton x:Name="rb3" Content="" HorizontalAlignment="Left" Height="15" Margin="29,160,0,0" VerticalAlignment="Top" Width="15" RenderTransformOrigin="0.511,0.403" Checked="rb3_Checked_1"/>
        <RadioButton x:Name="rb4" Content="" HorizontalAlignment="Left" Height="15" Margin="29,190,0,0" VerticalAlignment="Top" Width="15" Checked="RadioButton_Checked"/>
        <Label Content="Новичок (9x9)" HorizontalAlignment="Left" Height="26" Margin="49,92,0,0" VerticalAlignment="Top" Width="104"/>
